{
  "name": "qti-reporter",
  "version": "1.0.0",
  "description": "qti-reporter generates human-readable HTML reports per respondent and an aggregated CSV report from QTI 3.0 assessment items and results.",
  "main": "dist/cli.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write .",
    "lint": "eslint . && tsc -p tsconfig.json --noEmit",
    "verify": "npm run format && npm run lint && npm test && npm run build",
    "prepare": "npm run build",
    "test": "npm run build && node --test \"dist/test/**/*.test.js\"",
    "start": "npm run build && node dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metyatech/qti-reporter.git"
  },
  "keywords": [
    "qti",
    "qti3",
    "assessment",
    "report",
    "html",
    "csv"
  ],
  "author": "metyatech",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/metyatech/qti-reporter/issues"
  },
  "homepage": "https://github.com/metyatech/qti-reporter#readme",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "jsdom": "^27.4.0",
    "qti-html-renderer": "^0.1.0"
  }
}
